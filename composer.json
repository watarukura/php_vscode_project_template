{
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "^0.12.51",
        "vimeo/psalm": "^4.0"
    },
    "require": {
        "slim/slim": "^4.5",
        "slim/psr7": "^1.2"
    },
    "scripts": {
        "cs": "php-cs-fixer fix --allow-risky=yes public",
        "lint": "@cs --dry-run",
        "test": [
            "phpunit",
            "@lint"
        ],
        "analyse": [
            "phpstan analyze --level=max public",
            "psalm"
        ]
    }
}
