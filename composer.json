{
    "name": "watarukura/php_vscode_project_template",
    "description": "private template for write php code with visual studio code",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "watarukura",
            "email": "what.r.j150@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "^0.12.51",
        "vimeo/psalm": "^4.0"
    },
    "require": {
        "slim/slim": "^4.5",
        "slim/psr7": "^1.2",
        "php-di/php-di": "^6.3"
    },
    "scripts": {
        "cs": "php-cs-fixer fix --allow-risky=yes public/",
        "cs_test": "php-cs-fixer fix --allow-risky=yes tests/",
        "lint": "@cs --dry-run",
        "test": [
            "phpunit --configuration phpunit.xml",
            "@lint"
        ],
        "test:coverage": [
            "phpunit --configuration phpunit.xml --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
        ],
        "analyse": [
            "phpstan analyze --level=max public",
            "psalm"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
